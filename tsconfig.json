{
  "compilerOptions": {
    "module": "ES2015",
    "target": "es5",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "outDir": "./build",
    "sourceMap": true,
    "isolatedModules": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitUseStrict": false,
    "declaration": false
  },
  "exclude": [
    "node_modules"
  ]
}
